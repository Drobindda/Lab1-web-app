@model Lab1_web_app.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Бронювання номеру @ViewBag.RoomName у @ViewBag.AccomodationName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <input type="hidden" value="@ViewBag.RoomId" name="RoomId" />

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestQuantity" class="control-label"></label>
                <input asp-for="GuestQuantity" class="form-control" />
                <span asp-validation-for="GuestQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ціна за добу</label>
                <p>@ViewBag.RoomPrice</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Забронювати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Rooms" asp-action="Index" asp-route-id="@ViewBag.AccomodationId">Повернутися</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
