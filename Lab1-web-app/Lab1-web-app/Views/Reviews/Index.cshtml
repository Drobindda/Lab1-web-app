@model IEnumerable<Lab1_web_app.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Відгуки про @ViewBag.AccomodationName</h1>

<p>
   @Html.ActionLink("Додати новий відгук", "Create", new {accomodationId = @ViewBag.AccomodationId, accomodationName = @ViewBag.AccomodationName})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accomodation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accomodation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-accomodationId="@ViewBag.AccomodationId">Змінити</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-accomodationId="@ViewBag.AccomodationId">Видалити</a>
            </td>
        </tr>
}
    
    </tbody>
</table>
<a asp-controller="Accomodations" asp-action="Index" asp-route-id="@ViewBag.AccomodationId" asp-route-name="@ViewBag.AccomodationName">Повернутись</a>