@model IEnumerable<Lab1_web_app.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.AccomodationName</h1>

<p>
   @Html.ActionLink("Додати новий номер", "Create", new {accomodationId = @ViewBag.AccomodationId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SdandartOccupancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxOccupancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalBedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalBathrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasTv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasKitchen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAirCon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasInternet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealService)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SdandartOccupancy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxOccupancy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBedrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBathrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasTv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasKitchen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAirCon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasInternet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealService.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a> |
                <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@item.Id">Забронювати</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Accomodations" asp-action="Index" asp-route-id="@ViewBag.AccomodationTypeId">Повернутися</a>